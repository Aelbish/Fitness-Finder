<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New Workout Plan</title>
  </head>
  <body>
    <form action="/workoutplans" method="POST">
      <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="workout[title]" />
      </div>
      <div>
        <label for="category">Category</label>
        <select name="category" id="category">
          <% for (let category of categories) {%>
          <option value="<%= category %>"><%= category %></option>
          <% } %>
        </select>
      </div>
      <div>
        <label for="daysPerWeek">Days Per Week</label>
        <select name="daysPerWeek" id="daysPerWeek">
          <% for (let days of daysPerWeek) {%>
          <option value="<%= days %>"><%= days %></option>
          <% } %>
        </select>
      </div>

      <div>
        <label for="duration">Duration per workout</label>
        <input type="text" id="duration" name="workout[duration]" />
      </div>
      <div>
        <label for="description">Description</label>
        <textarea id="description" name="workout[description]"></textarea>
      </div>
      <div>
        <label for="notes">Notes</label>
        <textarea id="notes" name="workout[notes]"></textarea>
      </div>
      <button>Add Workout Plan</button>
    </form>
    <a href="/workoutplans">All Workouts</a>
  </body>
</html>
