<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Workout Plans</title>
  </head>
  <body>
    <h1><%= category %> Workouts</h1>
    <div>
      <a href="/workoutplans/new">Add a workout plan</a>
    </div>
    <div>
      <div>View By Categories</div>
      <a href="/workoutplans?category=5-day Split">View 5 day split</a>
    </div>
    <ul>
      <% for (let work of workout) { %>
      <li>
        <a href="/workoutplans/<%= work._id %>"><%= work.title %></a>
      </li>
      <% } %>
    </ul>
    <% if (category !== "All") {%>
    <a href="/workoutplans/">All Workouts</a>
    <% } %>
  </body>
</html>
