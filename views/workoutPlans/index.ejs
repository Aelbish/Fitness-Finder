<% layout("layouts/boilerplate.ejs") %> <% if (category !=="All") { %>
<h1><%= category %></h1>
<% } else {%>
<h1><%= category %> Workouts</h1>
<% } %> <% for (let work of workout) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img
        class="img-fluid"
        alt=""
        src="https://www.thefamouspeople.com/profiles/images/david-laid-1.jpg"
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= work.title %></h5>
        <p class="card-text"><%= work.category %> Category</p>
        <p class="card-text">
          <small class="text-muted"
            ><%= work.duration%> Per Session, <%= work.daysPerWeek %> Days Per
            Week</small
          >
        </p>
        <a class="btn btn-primary" href="/workoutplans/<%= work._id %>">View</a>
      </div>
    </div>
  </div>
</div>
<% } %>
