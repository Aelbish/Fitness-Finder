<% layout("layouts/boilerplate.ejs") %>

<div class="row">
  <h1 class="text-center">Edit Profile</h1>
  <div class="col-6 offset-3">
    <form
      action="/users/<%= user._id %>/edit?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
    >
      <div class="mb-3">
        <label class="form-label" for="bio">Bio</label>
        <textarea
          class="form-control"
          id="bio"
          name="bio"
          cols="30"
          rows="4"
          placeholder="Add a bio ..."
          required
        >
<%= user.bio %></textarea
        >
        <div class="invalid-feedback">Bio cannot be empty.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="location"
          value="<%= user.location%>"
          placeholder="City, State"
          required
        />
        <div class="invalid-feedback">Please enter a valid location.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="images">Images</label>
        <input
          class="form-control"
          type="text"
          id="images"
          name="images"
          value="<%= user.images[0]%>"
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="bench">Bench Press 1RM</label>
        <div class="input-group">
          <span class="input-group-text" id="inputGroupPrepend2">lbs.</span>
          <input
            class="form-control"
            type="number"
            id="bench"
            name="bench"
            value="<%= user.bench%>"
          />
        </div>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="dead">Deadlift 1RM</label>
        <div class="input-group">
          <span class="input-group-text" id="inputGroupPrepend2">lbs.</span>
          <input
            class="form-control"
            type="number"
            id="dead"
            name="dead"
            value="<%= user.dead%>"
          />
        </div>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="squat">Squat 1RM</label>
        <div class="input-group">
          <span class="input-group-text" id="inputGroupPrepend2">lbs.</span>
          <input
            class="form-control"
            type="number"
            id="squat"
            name="squat"
            value="<%= user.squat%>"
          />
        </div>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-warning">Update</button>
        <a href="/users/<%= user._id %>" class="btn btn-danger">Cancel</a>
      </div>
    </form>
  </div>
</div>

<script>
  tinymce.init({
    selector: "#description",
    hidden_input: false,
    readonly: false,
    height: "100%",
  });
</script>
